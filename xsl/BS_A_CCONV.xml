<?xml version="1.0"?>
<xsl:stylesheet xmlns:x="BS_A_CCONV" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:soap="http://schemas.xmlsoap.org/soap/envelope/" xmlns:ns2="http://bus.colvir.com/exp" xmlns:ns3="http://bus.colvir.com/module/service/cap/types" xmlns:ns4="http://bus.colvir.com/exp/data" xmlns:ns5="http://bus.colvir.com/exp/domain" xmlns:ns7="http://www.colvir.com/cr2proxy/transactions" version="1.0">
  <xsl:template match="/">
    <xsl:for-each select="soap:Envelope">
      <x:BSMessage xmlns:x="BS_A_CCONV" Version="STD1.0" AnsDateTime="2008-01-17T00:16:42.0625">
        <xsl:attribute name="ID">
          <xsl:value-of select="soap:Body/ns3:capRes/ns3:header/ns3:capId"/>
        </xsl:attribute>
        
                <xsl:choose> 
                      <xsl:when test="soap:Body/ns3:capRes/ns3:header/ns3:errCode != '0'">
					<BSHead CustomerID="BSS_CUSTOMER_ID" OutSysID="InvoRetail">
                        <xsl:attribute name="ABSMessage">
                        <xsl:value-of select="concat('Ошибка обработки платежа: ',soap:Body/ns3:capRes/ns3:header/ns3:errCode)"/>
                        </xsl:attribute>                      					  
                        <Errors>
                          <m l="0" t="0" c="BS:2" s="0">
                            <xsl:attribute name="e">
                               <xsl:value-of select="soap:Body/ns3:capRes/ns3:header/ns3:errText"/>
                            </xsl:attribute>                                  
                          </m>
                        </Errors>
					</BSHead>
					<BSAnswer>
					  <xsl:attribute name="REF">
						<xsl:value-of select="soap:Body/ns3:capRes/ns3:header/ns3:capId"/>
					  </xsl:attribute>
					</BSAnswer>					
                      </xsl:when> 
					<xsl:when test="soap:Body/ns3:capRes/ns3:header/ns3:capId">					  					  
					<BSHead CustomerID="BSS_CUSTOMER_ID" OutSysID="InvoRetail">
                        <xsl:attribute name="ABSMessage">						
                        <xsl:text>Операция выполнена/Successful</xsl:text>						
						</xsl:attribute>
                        <Errors>
                          <m l="0" t="0" c="0" e="" s="0"/>
                        </Errors>	
					</BSHead>	
					<BSAnswer>
					  <xsl:attribute name="REF">
						<xsl:value-of select="soap:Body/ns3:capRes/ns3:header/ns3:capId"/>
					  </xsl:attribute>
                      <xsl:attribute name="Status">						                        
					    <xsl:text>17041</xsl:text>						
					  </xsl:attribute>						  
					</BSAnswer>					
					</xsl:when> 
                    <xsl:otherwise>
					<BSHead CustomerID="BSS_CUSTOMER_ID" OutSysID="InvoRetail">
                        <Errors>
                          <m l="0" t="0" c="BS:2" s="0" e="Internal Error">
                          </m>
                        </Errors>	
					</BSHead>	
					<BSAnswer>
					  <xsl:attribute name="REF">
						<xsl:value-of select="soap:Body/ns3:capRes/ns3:header/ns3:capId"/>
					  </xsl:attribute>
					</BSAnswer>					
                    </xsl:otherwise>
                </xsl:choose>
      </x:BSMessage>
    </xsl:for-each>
  </xsl:template>
</xsl:stylesheet>
